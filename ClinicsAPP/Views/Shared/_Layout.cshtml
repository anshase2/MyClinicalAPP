<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>

        <!-- خلفية الصفحة أزرق فاتح -->
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container">
            <img src="~/Homeicon.jpg" alt="Logo" style="height: 60px; width: 60px; margin-right: 10px;">

                <a class="navbar-brand text-dark fw-bold" href="#">MyClinic</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Doctors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Blue Separator -->
    <div style="height: 10px; width: 25%; background-color: #00bfff;"></div>

        <!-- Main Content -->
        <div class="container my-4">
            @RenderBody()
        </div>

        <!-- Blue Separator before Footer -->
    <div style="height: 2px;     margin: 0 60px;
 border-radius: 5px; background-color: #00bfff;"></div>

        <!-- Footer -->

    <footer class="bg-white text-dark py-4 shadow-sm">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap">

                <!-- يسار: سوشال ميديا -->
                <div class="social-icons mb-3">
                    <a  href="#" class="text-dark fs-4 me-3"><i class="bi bi-instagram"></i></a>
                    <a  href="#" class="text-dark fs-4 me-3"><i class="bi bi-facebook"></i></a>
                    <a  href="#" class="text-dark fs-4"><i class="bi bi-whatsapp"></i></a>
                </div>

                <!-- الوسط: النص والروابط -->
                <div class="text-center mx-auto mb-3">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item"><a href="#" class="text-dark text-decoration-none">Home</a></li>
                        <li class="list-inline-item"><a href="#" class="text-dark text-decoration-none">Doctors</a></li>
                        <li class="list-inline-item"><a href="#" class="text-dark text-decoration-none">Services</a></li>
                        <li class="list-inline-item"><a href="#" class="text-dark text-decoration-none">Contact</a></li>
                        <li class="list" ><br><a href="#" class="text-dark text-decoration-none">Privacy Policy</a></li>

                    </ul>
                    <p class="mb-1">&copy; 2025 MyClinic. All rights reserved.</p>

                </div>

                <!-- يمين: Find Us -->
                <div class="text-md-end mb-3">
                    <h5 class="fw-bold mb-2">Find Us</h5>
                    <p class="mb-1"><i class="bi bi-envelope me-1"></i> info@myclinic.com</p>
                    <p class="mb-0"><i class="bi bi-printer me-1"></i> Fax: +1 234 567 890</p>
                </div>

            </div>
        </div>
    </footer>

</body>
</html>
