@{
    ViewData["Title"] = "Doctor Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/StyleSheetDocProfile.css" />

<div class="container my-5 px-lg-5">

    <div class="row g-4">

        <!-- LEFT -->
        <div class="col-lg-4">

            <div class="card shadow-sm rounded-4 h-100">

                <div class="card-body">

                    <div class="d-flex align-items-center gap-3">
                        <img src="~/OIP.webp"
                             class="rounded-circle border"
                             style="width:115px;height:115px;object-fit:cover;"
                             alt="Doctor" />

                        <div class="profile-meta">
                            <h5 class="mb-1">Dr. Osama Anshasi</h5>
                            <div class="text-primary fw-bold mb-1">
                                Cardiology Specialist
                            </div>
                            <div class="text-muted small mb-2">
                                📍 Amman – University Street
                            </div>

                            <div class="d-flex gap-2 flex-wrap">
                                <span class="badge bg-warning text-dark">⭐ 4.9</span>
                                <span class="badge bg-secondary">💬 99</span>
                                <span class="badge bg-info text-dark">👁 36,816</span>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer bg-white border-0 text-center pt-0">
                    <a href="/Booking/Create"
                       class="btn btn-primary fw-bold w-100 rounded-pill mb-1">
                        BOOK APPOINTMENT
                    </a>
                    <small class="text-muted">
                        Fast booking • Confirm in minutes
                    </small>
                </div>

            </div>
        </div>

        <!-- RIGHT -->
        <div class="col-lg-8">

            <!-- Review -->
            <div class="card shadow-sm rounded-4 mb-3">
                <div class="card-body">
                    <div class="text-warning mb-1 fs-5">★★★★★</div>
                    <p class="mb-1">
                        Excellent doctor, very professional and respectful.
                    </p>
                    <small class="text-muted">— Awad</small>
                </div>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-3">
                <li class="nav-item">
                    <button class="nav-link active">About</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link">Locations</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link">Insurance</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link">Working Hours</button>
                </li>
            </ul>

            <!-- Content -->
            <div class="card shadow-sm rounded-4">
                <div class="card-body">

                    <h5 class="mb-3 section-title">
                        About the Doctor
                    </h5>

                    <p>
                        Specialized in heart diseases, vascular conditions,
                        and interventional catheterization procedures.
                    </p>

                    <div class="row g-3 mt-2">

                        <div class="col-md-6 col-lg-3">
                            <div class="border rounded-3 p-3 text-center h-100">
                                <div class="text-muted small">Experience</div>
                                <div class="fw-bold">10+ Years</div>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-3">
                            <div class="border rounded-3 p-3 text-center h-100">
                                <div class="text-muted small">Clinic</div>
                                <div class="fw-bold">MyClinic – Downtown</div>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-3">
                            <div class="border rounded-3 p-3 text-center h-100">
                                <div class="text-muted small">Consultation Fee</div>
                                <div class="fw-bold">$25</div>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-3">
                            <div class="border rounded-3 p-3 text-center h-100">
                                <div class="text-muted small">Availability</div>
                                <div class="fw-bold text-success">Today</div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>
</div>
