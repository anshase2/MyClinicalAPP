@using ClinicsAPP
@using ClinicsAPP.Models
@model List<Doctor>;

<h2 class="my-4">Doctors List</h2>
<!-- Search Box -->
<form class="d-flex" method="get" asp-action="SearchDoctors">
    <input type="text" name="query" class="form-control me-2" placeholder="Search doctors...">
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<div class="mb-4 text-center">
    <button class="btn btn-light me-2 filter-btn" data-filter="All">All</button>
    <button class="btn btn-light me-2 filter-btn" data-filter="TopRated">Top Rated</button>
    <button class="btn btn-light me-2 filter-btn" data-filter="Nearest">Nearest</button>
    <button class="btn btn-light me-2 filter-btn" data-filter="AvailableNow">Available Now</button>
    <button class="btn btn-light me-2 filter-btn" data-filter="MostPopular">Most Popular</button>
</div>

<div class="container">
    <div class="row">
        @foreach (var doctor in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100" style="background-color: white; color:black;">

                    <div class="card-body">

                        <h5 class="card-title">
                            <img src="~/OIP.webp" alt="@doctor.FullName" style="width:80px; height:80px; border-radius:100%; margin-bottom:10px; object-fit:cover;">
                            @doctor.FullName
                        </h5>
                        <p class="card-text">Specalist: @doctor.Specalist </p>
                        <p class="card-text">Description: @doctor.Description</p>
                        <p class="card-text">
                            Rating:
                            <!-- Stars -->
                            <span style="color:gold;">&#9733;&#9733;&#9733;&#9733;</span><span style="color:lightgray;">&#9733;</span>
                            <!-- Numeric value -->
                            4 of 5
                        </p>
                       <a href="~/DoctorProfile" class="btn"
                        style="
                            background-color:#1e88e5;
                            border-color:#1e88e5;
                        color:white;
                            font-weight:bold;
                        transition:0.2s;
                        "
                        onmouseover="this.style.backgroundColor='#42a5f5'"
                        onmouseout="this.style.backgroundColor='#64b5f6'">
                        see more
                        </a>
                    </div>
                  
                </div>
            </div>
        }
    </div>
</div>